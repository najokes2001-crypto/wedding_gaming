                <div class="progress" id="progress">
                    <!-- –ü—Ä–æ–≥—Ä–µ—Å—Å –±—É–¥–µ—Ç –¥–æ–±–∞–≤–ª–µ–Ω —á–µ—Ä–µ–∑ JavaScript -->
                </div>
            </div>
        </div>
    </div>
    
    <script>
        // –î–∞–Ω–Ω—ã–µ –∏–≥—Ä—ã: 10 –≤–æ–ø—Ä–æ—Å–æ–≤ —Å —Ç—Ä–µ–º—è —Ñ–æ—Ç–æ–≥—Ä–∞—Ñ–∏—è–º–∏ –∏ –ø—Ä–∞–≤–∏–ª—å–Ω—ã–º–∏ –æ—Ç–≤–µ—Ç–∞–º–∏
        const gameData = [
            {
                photos: ["1.jpg", "2.jpg", "3.jpg"],
                answer: "–ö–∞–∫ —Ä—ã–±–∞ –≤ –≤–æ–¥–µ",
                explanation: "–ß—É–≤—Å—Ç–≤–æ–≤–∞—Ç—å —Å–µ–±—è –ª–µ–≥–∫–æ –∏ —É–≤–µ—Ä–µ–Ω–Ω–æ"
            },
            {
                photos: ["4.jpg", "5.jpg", "6.jpg"],
                answer: "–ú–∞—Å—Ç–µ—Ä –Ω–∞ –≤—Å–µ —Ä—É–∫–∏",
                explanation: "–£–º–µ–µ—Ç –¥–µ–ª–∞—Ç—å –≤—Å—ë"
            },
            {
                photos: ["7.jpg", "8.jpg", "9.jpg"],
                answer: "–î—É—à–∞ –∫–æ–º–ø–∞–Ω–∏–∏",
                explanation: "–¢–æ—Ç, –∫—Ç–æ –≤–µ—Å–µ–ª–∏—Ç –≤—Å–µ—Ö –≤–æ–∫—Ä—É–≥"
            },
            {
                photos: ["10.jpg", "11.jpg", "12.jpg"],
                answer: "–Ø–±–ª–æ–∫–æ –æ—Ç —è–±–ª–æ–Ω–∏ –Ω–µ–¥–∞–ª–µ–∫–æ –ø–∞–¥–∞–µ—Ç",
                explanation: "–ü–æ—Ö–æ–∂ –Ω–∞ —Ä–æ–¥–∏—Ç–µ–ª–µ–π"
            },
            {
                photos: ["13.jpg", "14.jpg", "15.jpg"],
                answer: "–ú–æ—Ä–µ –ø–æ –∫–æ–ª–µ–Ω–æ",
                explanation: "–ù–∏—á–µ–≥–æ –Ω–µ –±–æ–∏—Ç—Å—è"
            },
            {
                photos: ["16.jpg", "17.jpg", "18.jpg"],
                answer: "–í–∏—Ç–∞—Ç—å –≤ –æ–±–ª–∞–∫–∞—Ö",
                explanation: "–ú–µ—á—Ç–∞—Ç–µ–ª—å"
            },
            {
                photos: ["19.jpg", "20.jpg", "21.jpg"],
                answer: "–î–≤–∞ —Å–∞–ø–æ–≥–∞ –ø–∞—Ä–∞",
                explanation: "–û—á–µ–Ω—å –ø–æ—Ö–æ–∂–∏–µ –ª—é–¥–∏"
            },
            {
                photos: ["22.jpg", "23.jpg", "24.jpg"],
                answer: "–ù–µ —Ä–∞–∑–ª–µ–π –≤–æ–¥–∞",
                explanation: "–û—á–µ–Ω—å –¥—Ä—É–∂–Ω—ã–µ"
            },
            {
                photos: ["25.jpg", "26.jpg", "27.jpg"],
                answer: "–° –º–∏–ª—ã–º —Ä–∞–π –∏ –≤ —à–∞–ª–∞—à–µ",
                explanation: "–ì–ª–∞–≤–Ω–æ–µ - –±—ã—Ç—å –≤–º–µ—Å—Ç–µ"
            },
            {
                photos: ["28.jpg", "29.jpg", "30.jpg"],
                answer: "–° –ø–µ—Ä–≤–æ–≥–æ –≤–∑–≥–ª—è–¥–∞",
                explanation: "–ú–≥–Ω–æ–≤–µ–Ω–Ω–∞—è —Å–∏–º–ø–∞—Ç–∏—è"
            }
        ];
        
        let currentQuestionIndex = 0;
        
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∏–≥—Ä—ã
        document.addEventListener('DOMContentLoaded', function() {
            // –°–æ–∑–¥–∞–µ–º —Ç–æ—á–∫–∏ –ø—Ä–æ–≥—Ä–µ—Å—Å–∞
            createProgressDots();
            
            // –ó–∞–≥—Ä—É–∂–∞–µ–º –ø–µ—Ä–≤—ã–π –≤–æ–ø—Ä–æ—Å
            loadQuestion(currentQuestionIndex);
            
            // –ù–∞–∑–Ω–∞—á–∞–µ–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ —Å–æ–±—ã—Ç–∏–π
            document.getElementById('show-answer').addEventListener('click', showAnswer);
            document.getElementById('next-question').addEventListener('click', nextQuestion);
        });
        
        // –°–æ–∑–¥–∞–Ω–∏–µ —Ç–æ—á–µ–∫ –ø—Ä–æ–≥—Ä–µ—Å—Å–∞
        function createProgressDots() {
            const progressContainer = document.getElementById('progress');
            
            for (let i = 0; i < gameData.length; i++) {
                const dot = document.createElement('div');
                dot.className = 'progress-dot';
                if (i === 0) dot.classList.add('active');
                progressContainer.appendChild(dot);
            }
        }
        
        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –ø—Ä–æ–≥—Ä–µ—Å—Å–∞
        function updateProgress() {
            const dots = document.querySelectorAll('.progress-dot');
            
            dots.forEach((dot, index) => {
                dot.classList.remove('active', 'completed');
                
                if (index < currentQuestionIndex) {
                    dot.classList.add('completed');
                } else if (index === currentQuestionIndex) {
                    dot.classList.add('active');
                }
            });
            
            document.getElementById('current-question').textContent = currentQuestionIndex + 1;
        }
        
        // –ó–∞–≥—Ä—É–∑–∫–∞ –≤–æ–ø—Ä–æ—Å–∞
        function loadQuestion(index) {
            const question = gameData[index];
            const photosContainer = document.getElementById('photos-container');
            photosContainer.innerHTML = '';
            
            // –°–æ–∑–¥–∞–µ–º —ç–ª–µ–º–µ–Ω—Ç—ã –¥–ª—è —Ñ–æ—Ç–æ–≥—Ä–∞—Ñ–∏–π
            for (let i = 0; i < question.photos.length; i++) {
                const photoItem = document.createElement('div');
                photoItem.className = 'photo-item';
                
                const photoNumber = document.createElement('div');
                photoNumber.className = 'photo-number';
                photoNumber.textContent = i + 1;
                
                // –°–æ–∑–¥–∞–µ–º –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ
                const img = document.createElement('img');
                img.src = question.photos[i];
                img.alt = `–§–æ—Ç–æ ${i+1}`;
                
                // –ï—Å–ª–∏ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –Ω–µ –∑–∞–≥—Ä—É–∑–∏–ª–æ—Å—å, –ø–æ–∫–∞–∑—ã–≤–∞–µ–º –∑–∞–≥–ª—É—à–∫—É
                img.onerror = function() {
                    this.style.display = 'none';
                    const placeholder = document.createElement('div');
                    placeholder.className = 'photo-placeholder';
                    placeholder.textContent = `–§–æ—Ç–æ ${question.photos[i]}`;
                    photoItem.appendChild(placeholder);
                };
                
                photoItem.appendChild(photoNumber);
                photoItem.appendChild(img);
                photosContainer.appendChild(photoItem);
            }
            
            // –°–∫—Ä—ã–≤–∞–µ–º –æ—Ç–≤–µ—Ç
            document.getElementById('answer-container').style.display = 'none';
            document.getElementById('show-answer').disabled = false;
            document.getElementById('next-question').disabled = true;
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –ø—Ä–æ–≥—Ä–µ—Å—Å
            updateProgress();
        }
        
        // –ü–æ–∫–∞–∑–∞—Ç—å –æ—Ç–≤–µ—Ç
        function showAnswer() {
            const question = gameData[currentQuestionIndex];
            const answerContainer = document.getElementById('answer-container');
            const correctAnswer = document.getElementById('correct-answer');
            const answerExplanation = document.getElementById('answer-explanation');
            
            correctAnswer.textContent = question.answer;
            answerExplanation.textContent = question.explanation;
            
            answerContainer.style.display = 'block';
            document.getElementById('show-answer').disabled = true;
            document.getElementById('next-question').disabled = false;
        }
        
        // –°–ª–µ–¥—É—é—â–∏–π –≤–æ–ø—Ä–æ—Å
        function nextQuestion() {
            currentQuestionIndex++;
            
            if (currentQuestionIndex < gameData.length) {
                loadQuestion(currentQuestionIndex);
            } else {
                // –ò–≥—Ä–∞ –∑–∞–≤–µ—Ä—à–µ–Ω–∞
                const gameContainer = document.getElementById('game-container');
                gameContainer.innerHTML = `
                    <div class="completion-screen">
                        <h2>üéâ –ü–æ–∑–¥—Ä–∞–≤–ª—è–µ–º! –í—ã –∑–∞–≤–µ—Ä—à–∏–ª–∏ –∏–≥—Ä—É! üéâ</h2>
                        <p>–í—ã –Ω–∞—à–ª–∏ –≤—Å–µ —Å–≤—è–∑–∏ –º–µ–∂–¥—É —Ñ–æ—Ç–æ–≥—Ä–∞—Ñ–∏—è–º–∏!</p>
                        <div class="all-answers">
                            <h3>–í—Å–µ –ø—Ä–∞–≤–∏–ª—å–Ω—ã–µ –æ—Ç–≤–µ—Ç—ã:</h3>
                            ${gameData.map((question, index) => 
                                `<div style="margin: 15px 0; text-align: left;">
                                    <strong>${index + 1}. ${question.answer}</strong> - ${question.explanation}
                                </div>`
                            ).join('')}
                        </div>
                        <button class="my_button" onclick="location.reload()">–ù–∞—á–∞—Ç—å –∑–∞–Ω–æ–≤–æ</button>
                    </div>
                `;
            }
        }
    </script>
